              </form>
          </div>
               
        </div>
        <div class="col-6">
         <div class="jumbotron bg-light border" style="">
              {{#if flag}}
              <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Sorry!</h4>
                   <p>Please login again or register</p>
                        <hr>
                      <p class="mb-0">{{message}}</p>
                </div>    
              {{else}}<div class="h4">Login</div>
              {{/if}}
              <form  class="form-group mt-3" action="/login" method="POST">
                  <label for="Username" class="text-secondary">Username</label>
                  <input type="text" class="form-control mb-2"
                  name="username">
                  <label for="Email" class="text-secondary">Mail Id</label>
                  <input type="text" class="form-control mb-2"
                  name="email">
                  <label for="Password" class="text-secondary">Password</label>
                  <input type="password" class="form-control mb-2"
                  name="password">
                  <input style="background-color:#113D6C;" type="submit" value="Login" class="form-control text-light mt-4">
              </form>
          </div>
