  <hr>
  <p class="mb-0">Have a nice day.</p>
</div>
    {{else}} <div class="h4">Register</div>{{/if}}
              <form  class="form-group mt-3" action="/signup" method="POST">
                  <label for="Username" class="text-secondary">Username</label>
                  <input type="text" class="form-control mb-2"
                  name="username">
                  <label for="Email" class="text-secondary">Mail Id</label>
                  <input type="text" class="form-control mb-2"
                  name="email">
                  <label for="Password" class="text-secondary">Password (6 or more characters)</label>
                  <input type="password" class="form-control mb-2"
                  name="password">
                  <label for="Confirm_Password" class="text-secondary">Confirm Password</label>
                  <input type="password" class="form-control mb-2"
                  name="confirmpassword">
                  <small class="text-secondary">By clicking Join now, you agree to Flavor's <b>User Agreement Privacy Policy and Cookie Policy.</b></small>
                  <input type="submit" value="Join now" class="form-control text-light mt-4" style="background-color:#113D6C;">
